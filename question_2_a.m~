function g=question_2_a(f)
[x,y]=size(f) ;
g=zeros(size(f));
g=f.*(-1)^(x+y);
figure;
subplot(2,2,1),imshow(f),title('Original');
subplot(2,2,2),imshow(g),title('Multiplied');

G = fft(g);




subplot(2,2,3),plot(abs(G)),title('Magnitude');
subplot(2,2,4),plot(angle(G)),title('Phase');
G = abs(G);  
G = mat2gray(G); 
figure;
subplot(2,1,1),imagesc(G,[]); 


end